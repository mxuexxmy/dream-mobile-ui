.di-card .card {
  display: flex;
  margin: 5px;
  padding: 10px;
  box-sizing: border-box;
}
.di-card .card .card-image {
  width: 64px;
  height: 64px;
  border-radius: 5px;
  overflow: hidden;
  flex-shrink: 0;
}
.di-card .card .card-image image {
  height: 100%;
  width: 100%;
}
.di-card .card .card-content {
  display: flex;
  flex-direction: column;
  padding-left: 10px;
  width: 100%;
  justify-content: space-between;
}
.di-card .card .card-content .card-content__title {
  position: relative;
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  line-height: 1.2;
}
.di-card .card .card-content .card-content__title text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.di-card .card .card-content .card-content__footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
}
.di-card .card.mode-multiple .card-content {
  padding-left: 0;
  width: 100%;
}
.di-card .card.mode-multiple .card-image {
  display: flex;
  width: 100%;
  height: 70px;
  margin: 10px 0px;
}
.di-card .card.mode-multiple .card-image .card-image__item {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  border-radius: 5px;
  margin-left: 10px;
}
.di-card .card.mode-multiple .card-image .card-image__item:first-child {
  margin-left: 0;
}
.di-card .card.mode-multiple .card-image .card-image__item .el-image {
  width: 100%;
  height: 100%;
}
.di-card .card.mode-picture-card {
  flex-direction: column;
}
.di-card .card.mode-picture-card .card-image {
  width: 100%;
  height: 100px;
}
.di-card .card.mode-picture-card .card-content {
  margin-top: 10px;
  padding-left: 0;
}
.di-card .card.mode-picture-card .card-content .card-content__footer {
  margin-top: 10px;
}

